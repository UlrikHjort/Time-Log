<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:stretchColumns="*" android:background="@drawable/back">
	
	<TableRow>
		<RadioGroup android:layout_width="fill_parent" 
			android:layout_height="wrap_content" android:orientation="horizontal"  >
			<RadioButton android:id="@+id/RadioPrivate"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Privat" android:textColor="#000000" android:checked="true" android:layout_gravity="left"/>
			<RadioButton android:id="@+id/RadioBusiness" android:textColor="#000000"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Firma" android:checked="true" android:layout_gravity="right"/>
		</RadioGroup>
	</TableRow>
	
	<TableRow>	
			<EditText android:id="@+id/Description" 
			 android:layout_height="wrap_content" 
		     android:layout_width="wrap_content" android:inputType="textMultiLine" android:scrollHorizontally="false"		  
			android:singleLine="false" android:hint="Beskrivelse" android:layout_margin="10dip"  />
	</TableRow>

	<TableRow>
			<EditText android:id="@+id/TripStart" 
			 android:layout_height="wrap_content" android:maxLength="20"
			android:singleLine="true" android:hint="Trip start" android:inputType="number" android:layout_margin="10dip" />
	</TableRow>



	<TableRow>
			<EditText android:id="@+id/TripStop"  
			 android:layout_height="wrap_content" android:maxLength="20"
			android:singleLine="true" android:hint="Trip stop" android:inputType="number" android:layout_margin="10dip" />
	</TableRow>

	<TableRow  >
		<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Start" android:id="@+id/Start" android:layout_margin="20dip" />
	</TableRow>

	
</TableLayout>