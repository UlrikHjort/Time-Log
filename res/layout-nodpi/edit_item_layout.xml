<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:stretchColumns="*" android:background="@drawable/back">
	
	<TableRow>
		<RadioGroup android:layout_width="fill_parent" 
			android:layout_height="wrap_content" android:orientation="horizontal"  >
			<RadioButton android:id="@+id/RadioPrivateEdit" android:textColor="#000000"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Privat" android:checked="true" android:layout_gravity="left"/>
			<RadioButton android:id="@+id/RadioBusinessEdit" android:textColor="#000000"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Firma" android:checked="true" android:layout_gravity="right"/>
		</RadioGroup>
	</TableRow>
	
		<TableRow  >
		<TextView  android:layout_width="wrap_content" android:id="@+id/DescriptionEditLabel"  android:textColor="#000000"
			android:layout_height="wrap_content" 
			android:textStyle="bold" android:text="Beskrivelse :" />
	</TableRow>
	
	
	<TableRow>	
			<EditText android:id="@+id/DescriptionEdit" 
			 android:layout_height="wrap_content" 
		     android:layout_width="fill_parent"  			  
			android:singleLine="true"  android:layout_margin="10dip"  />
	</TableRow>

		<TableRow  >
		<TextView android:id="@+id/TripStartEditLabel"  android:layout_width="wrap_content" android:textColor="#000000"
			android:layout_height="wrap_content" 
			android:textStyle="bold" android:text="Trip start:" />
	</TableRow>


	<TableRow>
			<EditText android:id="@+id/TripStartEdit" 
			 android:layout_height="wrap_content"
			android:singleLine="true" android:inputType="number" android:layout_margin="10dip" />
	</TableRow>

		<TableRow  >
		<TextView  android:layout_width="wrap_content" android:id="@+id/TripStopEditLabel" android:textColor="#000000"
			android:layout_height="wrap_content" 
			android:textStyle="bold" android:text="Trip stop:" />
	</TableRow>


	<TableRow>
			<EditText android:id="@+id/TripStopEdit"  
			 android:layout_height="wrap_content"
			android:singleLine="true"  android:inputType="number" android:layout_margin="10dip" />
	</TableRow>

	<TableRow  >
		<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Opdater" android:id="@+id/Update" android:layout_margin="20dip" />
	</TableRow>

	
</TableLayout>